<%- include('../partials/header') %>

<section>
    <div>Airline: </div>
    <div>
        <%= flight.airline %>
    </div>
    <div>Airport: </div>
    <div>
        <%= flight.airport %>
    </div>
    <div>Flight Number: </div>
    <div>
        <%= flight.flightNo %>
    </div>
    <div>Departure Time: </div>
    <div>
        <%= flight.departs.toLocaleDateString() %>
        <%= flight.departs.toLocaleTimeString().replace(':00', '' ) %>
    </div>
</section>

<h2>Destination</h2>
<form id="add-destination-form" method="POST" action="/flights/<%= flight._id %>/destinations">
    <label>Destination Airport:
        <input type="text" name="airport">
    </label><br>
    <label>Arrival:
        <input type="datetime-local" name="arrival">
    </label><br>
    <input type="submit" value="Add Destination">
</form>

<% if (flight.destinations.length) { %>
   <table>
    <thead>
        <tr>
            <th>Airport</th>
            <th>Arrival</th>
        </tr>
       </thead>
       <tbody>
        <% flight.destinations.forEach(function(f) { %>
           <tr>
            <td><%= f.airport %></td>
            <td><%= f.arrival.toLocaleString() %></td>
           </tr> 
        <% }); %>
       </tbody>
    </table>
    <% } else { %>
        <h5>No Destinations Added</h5>
    <% } %>

<%- include('../partials/footer') %>